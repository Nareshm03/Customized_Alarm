<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Notification Test Button Style -->
    <style name="NotificationTestButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/notification_test_text_primary</item>
        <item name="android:background">@drawable/save_button_background</item>
    </style>
    
    <!-- Notification Test Text Styles -->
    <style name="NotificationTestTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/notification_test_text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    
    <style name="NotificationTestDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/notification_test_text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>
    
    <!-- Primary Button Style -->
    <style name="Widget.MaterialComponents.Button.PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <!-- Circle Image View Style -->
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    
    <!-- Enhanced UI Styles -->
    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>
    
    <style name="CardStyle">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    
    <style name="SectionHeaderStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    
    <style name="SettingsCardStyle" parent="CardStyle">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">6dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
    
    <!-- Button Styles -->
    <style name="PrimaryButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/purple_500</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="SecondaryButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/purple_500</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- Text Input Styles -->
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/purple_500</item>
        <item name="hintTextColor">@color/purple_500</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
    
    <!-- Animation Styles -->
    <style name="FadeInAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
    
    <style name="SettingsDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
    
    <!-- Full Screen Theme for Settings -->
    <style name="FullScreenTheme" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
    
    <!-- Full Screen Dialog Style -->
    <style name="FullScreenDialogStyle" parent="Theme.Material3.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <!-- Calendar Styles -->
    <style name="CalendarDateTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="CalendarWeekDayAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Material 3 Enhanced Styles -->
    <style name="Widget.Material3.Button.OutlinedButton.Icon" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <!-- Enhanced Card Styles -->
    <style name="Widget.App.Card.Modern" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/colorSurfaceVariant</item>
        <item name="cardBackgroundColor">@color/surface_light</item>
    </style>

    <!-- Enhanced Button Styles -->
    <style name="Widget.App.Button.Primary" parent="Widget.Material3.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="Widget.App.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- Enhanced Text Input Styles -->
    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/on_surface_variant_light</item>
    </style>

    <!-- Date and Time Picker Themes -->
    <style name="MaterialDatePickerTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/on_surface_light</item>
    </style>

    <style name="MaterialTimePickerTheme" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/on_surface_light</item>
    </style>

</resources>