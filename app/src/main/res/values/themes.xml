<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme (Light) -->
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#9C27B0</item>
        <item name="colorPrimaryVariant">#7B1FA2</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">#9C27B0</item>
        <item name="colorSecondaryVariant">#7B1FA2</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/purple_700</item>
        
        <!-- Background colors -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">#757575</item>
        
        <!-- Enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>
        
        <!-- Enable toolbar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <!-- Legacy theme name for backward compatibility -->
    <style name="Theme.TeacherScheduler" parent="AppTheme" />
    
    <style name="Theme.TeacherScheduler.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>