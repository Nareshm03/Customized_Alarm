<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme (Dark) -->
    <style name="AppTheme" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#BB86FC</item>
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorOnPrimary">#000000</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">#BB86FC</item>
        <item name="colorSecondaryVariant">#3700B3</item>
        <item name="colorOnSecondary">#000000</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/purple_700</item>
        
        <!-- Background colors -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">@color/white</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">#B3FFFFFF</item>
        
        <!-- Enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>
        
        <!-- Enable toolbar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <!-- Legacy theme name for backward compatibility -->
    <style name="Theme.TeacherScheduler" parent="AppTheme" />
    
    <style name="Theme.TeacherScheduler.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>