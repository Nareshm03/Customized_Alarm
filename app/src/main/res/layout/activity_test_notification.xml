<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/notification_test_background"
    android:padding="24dp"
    tools:context=".ui.TestNotificationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notification_test_title"
            android:textColor="@color/notification_test_text_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notification_test_subtitle"
            android:textColor="@color/notification_test_text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="32dp" />

        <!-- Immediate Test Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/notification_test_card_background"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/test_immediate_title"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/test_immediate_desc"
                    android:textColor="#CCCCCC"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnTestImmediateNotification"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="@string/test_immediate_button"
                    android:textColor="@android:color/white"
                    android:background="@drawable/save_button_background" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Class Reminders Test -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/notification_test_card_background"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/test_class_title"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/test_class_desc"
                    android:textColor="#CCCCCC"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnTestClassReminders"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="@string/test_class_button"
                    android:textColor="@android:color/white"
                    android:background="@drawable/save_button_background" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Meeting Reminders Test -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/notification_test_card_background"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/test_meeting_title"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/test_meeting_desc"
                    android:textColor="#CCCCCC"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnTestMeetingReminders"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="@string/test_meeting_button"
                    android:textColor="@android:color/white"
                    android:background="@drawable/save_button_background" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Snooze Test -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/notification_test_card_background"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/test_snooze_title"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/test_snooze_desc"
                    android:textColor="#CCCCCC"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnTestSnooze"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="@string/test_snooze_button"
                    android:textColor="@android:color/white"
                    android:background="@drawable/save_button_background" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Instructions -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/notification_test_instructions_background"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/test_instructions_title"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/test_instructions_desc"
                    android:textColor="#CCCCCC"
                    android:textSize="14sp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>